moradoMentr= #543458;
rosaMentr= #e4bec3;
rosaTransp= rgba(228,190,195,0.35);
naranjaBtn= #ff6633;
colorLentrasM= #51284f;
colorLetraR= #e4bec3;
@font-face { 
	font-family 'balto';
	font-family 'balto-light' 
	src url('../fonts/balto-light.otf')
	font-weight normal
	font-style normal
}
html
	background-color moradoMentr
	background-image url('../imgs/background.png')
	background-position-x center
	background-repeat no-repeat
	background-size auto	
	height 100%
body
	background-color rgba(0,0,0,0)
	color colorLentrasM
	font-family "balto"
	height: 71.7%;
#landing-header
	p
		color colorLetraR
		display inline-block
		float right
		margin-top 2em
		text-align right
		max-width 400px	
		margin-right: 1em;
#landing-content	
	position relative
	min-height:100%;
	#line-1
		display: inline-block
		span			
			display inline-block
			h2
				display inline-block	
			img
				float right;
				margin-top: 1.5em;
				z-index: 1;
				position: relative;
.landing-desc	
	margin-top -2em
	#description
		color: white;
		font-size: 1.2em;
		text-align: justify;
	#like
		img
			float: left;
			margin-left: -1em;
		label
			margin-top 2em
.landing-desc2	
	margin-top 1em
	#description
		color: white;
		font-size: 1.2em;
		text-align: justify;
	#like
		img
			float: left;
			margin-left: -1em;
		label
			margin-top 2em
#landing-options
	margin-top -2em
	#start
		background-color rgba(228,190,195,0.15)
		border 1px solid white
		color colorLentrasM
		margin  0 auto
		min-height 250px
		padding 1em
		text-align center
		width 100%
		#text1
			font-size 1.4em
			margin-top: 1em;
			width: 90%;
			margin-left: auto;
			margin-right: auto;
		#text2
			color white
			margin-top: 0.7em;
		button
			background-color naranjaBtn
			border 2px solid white
			border-radius 5px
			color white
			height 80px
			opacity 0.7
			width 90%
			font-size 1.2em
#landing-footer
	//background: rgba(0,0,0,.5);
	background-color black
	color white
	display table
	height 170px
	opacity 0.5
	text-align center
	width 100%
	//margin-top -170px
	#footer-row
		display table-row
		#footer-cell
			display table-cell
			vertical-align middle
